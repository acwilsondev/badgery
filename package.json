{
  "name": "badgery",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "docker-compose up",
    "start": "docker build -t badgery:production . && docker-compose up",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" && eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint --fix .",
    "test": "vitest run",
    "check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" && eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint . && vitest run"
  },
  "dependencies": {
    "@remix-run/node": "^2.16.0",
    "@remix-run/react": "^2.16.0",
    "@remix-run/serve": "^2.16.0",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.16.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^3.0.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

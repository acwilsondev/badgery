{
  "name": "badgery",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "docker:build": "docker build -t badgery:production .",
    "docker:build:dev": "docker build -t badgery:dev -f Dockerfile.dev .",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "docker:dev": "docker-compose up",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint --fix .",
    "start": "remix-serve ./build/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^2.16.0",
    "@remix-run/react": "^2.16.0",
    "@remix-run/serve": "^2.16.4",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@remix-run/dev": "^2.16.4",
    "@snyk/protect": "^1.1296.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/whatwg-fetch": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vanilla-extract/integration": "^8.0.1",
    "@vitest/coverage-v8": "^3.1.1",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.25.2",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.5.3",
    "snyk": "^1.1296.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^3.1.1",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
